
    <div class="top-content">
      <div class="inner-bg">
        <div class="container-fluid">
          <div id="loginbox" class="mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
            <div class="panel panel-info" >
              <div class="panel-heading">
                <div class="panel-title"><%=t('.token_title') %></div>
              </div>
              <div id="panel-area" class="panel-body" >
                <div class="controls">
                  <form id="tokenform" action=<%=token_details_path %> class="form-horizontal" role="form">
                    <div class="entry input-group">
                      <input id="login-username" type="text" class="form-control" name="token" value="" placeholder="Token">
                      <span class="input-group-btn">
                      <button class="btn btn-success btn-add" type="button">
                      <span class="glyphicon glyphicon-plus"></span>
                      </button>
                      </span>                                       
                    </div>
                    <div class="form-group">
                      <!-- Button -->
                      <div class="col-sm-12 controls">
                        <input class="submit btn btn-success" id="btn-login" type="submit" value="Submit Token">
                      </div>
                    </div>
                  </form>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <script>
      $(document).ready(function() {
      
        // validate signup form on keyup and submit
      
        $("#tokenform").validate({
      
            rules: {
      
                token: {
      
                    required: true,                 
      
                }
      
            },
      
            messages: {
      
                token: {
      
                    required: "Please enter a token number.",
      
                    
      
                }
      
            }
      
        });
      
      });
      
    </script>

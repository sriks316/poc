<!-- Top content -->
<div class="top-content">
  <div class="inner-bg">
    <div class="container">
      <div id="signupbox" class="mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
        <div class="panel panel-info">
          <div class="panel-heading">
            <div class="panel-title contact-sty"><%=t('.contact_us') %></div>
          </div>
          <div class="panel-body" >
            <form id="signupform" class="form-horizontal" role="form">
              <div id="signupalert" style="display:none" class="alert alert-danger">
                <p>Error:</p>
                <span></span>
              </div>
              <div class="form-group">
<!--                 <label for="email" class="col-lg-12 col-md-12 col-sm-12 col-xs-12 control-label"><%=t('.email') %></label> -->
                <div class="col-lg-12">
                  <input type="email" class="form-control" name="email" id="email-sty" placeholder="Email Address">
                </div>
              </div>
              <div class="form-group">
<!--                 <label for="firstname" class="col-lg-12 col-md-12 col-sm-12 col-xs-12 control-label"><%=t('.first_name') %></label> -->
                <div class="col-lg-12">
                  <input type="text" class="form-control" name="firstname" placeholder="First Name">
                </div>
              </div>
              <div class="form-group">
<!--                 <label for="lastname" class="col-lg-12 col-md-12 col-sm-12 col-xs-12 control-label"><%=t('.last_name') %></label> -->
                <div class="col-lg-12">
                  <input type="text" class="form-control" name="lastname" placeholder="Last Name">
                </div>
              </div>
              <div class="form-group">
<!--                 <label for="icode" class="col-lg-12 col-md-12 col-sm-12 col-xs-12 control-label"><%=t('.message') %></label> -->
                <div class="col-lg-12">
                  <textarea id="text_ar"  name="icode" placeholder="Message"></textarea>
                  <!--<input type="text" class="form-control" name="icode" placeholder="">-->
                </div>
              </div>
              <div class="form-group">
                <!-- Button -->                                        
                <div class="col-lg-12">
                  <input class="submit btn btn-success" id="btn-signup" type="submit" value="Submit" >
                </div>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<script>
  $(document).ready(function() {
    // validate signup form on keyup and submit
    $("#signupform").validate({
        rules: {
            email: {
                required: true,
                
            },
                                 firstname: {
                required: true,
                
            },
                                 lastname: {
                required: true,
                
            },
            passwd: {
                required: true,
                minlength: 5
            }
        },
        messages: {
            email: {
                required: "Please enter email",
                },
                                 firstname: {
                required: "Please enter first name",
                },
                                 lastname: {
                required: "Please enter last name",
                },
            passwd: {
                required: "Please enter password",
                minlength: "Your password must be at least 5 characters long"
            }
        }
    });
  
    
  });
</script>
</body>
</html>
